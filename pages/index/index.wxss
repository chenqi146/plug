.weui-select {
  padding: 16rpx 24rpx;
  border: none;
  border-radius: 12rpx;
  background-color: #F9F9F9;
  position: relative;
  flex: 1;
  min-height: 72rpx;
  line-height: 1.6;
  font-size: 28rpx;
  color: #333333;
}

.weui-select::after {
  content: " ";
  display: inline-block;
  height: 12rpx;
  width: 12rpx;
  border-width: 0 2rpx 2rpx 0;
  border-color: #999999;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  right: 20rpx;
  margin-top: -8rpx;
}

.tips {
  margin-top: 40rpx;
  font-size: 24rpx;
  color: #666666;
  text-align: center;
  background-color: #FFFFFF;
  padding: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  width: calc(100% - 32rpx);
  line-height: 1.5;
}

.highlight {
  color: #000000;
  font-weight: 500;
}

.country-select {
  display: flex;
  align-items: center;
  width: 100%;
  border-radius: 12rpx;
  overflow: hidden;
}

.search-icon {
  margin-left: 16rpx;
  font-size: 40rpx;
  color: #000000;
  padding: 8rpx;
  transition: transform 0.2s ease;
}

.search-icon:active {
  transform: scale(1.1);
}

/* 搜索弹窗样式 */
.search-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
  animation: fadeIn 0.2s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.search-container {
  width: 80%;
  max-height: 80%;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from { transform: translateY(50rpx); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}

.search-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #EEEEEE;
}

.search-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #000000;
}

.close-btn {
  font-size: 44rpx;
  color: #666666;
  padding: 0 10rpx;
  line-height: 1;
}

.search-input-container {
  display: flex;
  align-items: center;
  padding: 20rpx 32rpx;
  border-bottom: 1rpx solid #EEEEEE;
  position: relative;
}

.search-input {
  flex: 1;
  height: 72rpx;
  background-color: #F5F5F5;
  border-radius: 36rpx;
  padding: 0 70rpx 0 32rpx;
  font-size: 28rpx;
  color: #333333;
}

.clear-icon {
  position: absolute;
  right: 45rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #999999;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #EEEEEE;
  border-radius: 50%;
}

.country-list {
  flex: 1;
  max-height: 700rpx;
}

.country-item {
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #F0F0F0;
  font-size: 28rpx;
  color: #333333;
  transition: background-color 0.2s ease;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.country-item-hover {
  background-color: #F0F0F0;
}

.country-name {
  font-weight: 500;
}

.country-code {
  color: #999999;
  font-size: 24rpx;
  background-color: #F5F5F5;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.no-result {
  padding: 60rpx 32rpx;
  text-align: center;
  color: #999999;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.no-result view {
  margin-top: 20rpx;
}
